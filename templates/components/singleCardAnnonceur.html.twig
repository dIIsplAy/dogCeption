<div class="card col-4 m-1">
	<div class="card-body">
		<h4 class="card-title">{{ annonceur.user}}</h4>
		<h5 class="card-title">{{ annonceur.nomAsso }}</h5>
		{% if not annonceur.isSpa %}
			<p class="card-text">Statut : Eleveur privé</p>
		{% else %}
			<p class="card-text">Statut : SPA
			</p>
		{% endif %}
		<li class="list-group-item m-0">
			<i class="far fa-grin"></i>
			Annonces pourvus :
			{{ annonceur.countAnnonce }}
		</li>
		<li class="list-group-item m-0">
			<i class="far fa-frown"></i>
			Annonces non pourvus :
			{{ annonceur.countAnnonceNonPourvu }}</li>
		<li class="list-group-item m-0">
			🏚 :
			{{ annonceur.addresse }}</li>
		<li class="list-group-item m-0">
		📞: {{annonceur.telephone }}
        </li>
		<li class="list-group-item m-0">
		📩: {{ annonceur.email }}
        </li>
	</div>
</div>
